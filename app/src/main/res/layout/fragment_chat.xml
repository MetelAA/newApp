<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.chat.chatFragment"
    android:id="@+id/mainElemChatFragment"
    android:padding="5dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape_with_bottom_stroke"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/backToShowChatsChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/backgroundForIconsDarkerBlue" />

        <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_menu_profile"
        android:layout_marginLeft="15dp"
        />


        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/comradNameTextViewChat"
                style="@style/simpleTextStyleMontserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cheburek"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/comradStatusTextViewChat"
                style="@style/simpleTextStyleMontserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="online"
                android:textColor="@color/btnGreen"
                android:textSize="13sp" />
        </LinearLayout>



    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewShowMessages"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/attachFileBtnChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_attach_file" />

        <EditText
            android:id="@+id/messageEditTextChat"
            style="@style/simpleTextStyleMontserrat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Введите сообщение" />

        <ImageButton
            android:id="@+id/sendMessageBtnChat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_send_msg" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>