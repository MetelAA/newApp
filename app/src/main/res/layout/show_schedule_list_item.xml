<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_shape_black_stroke_background"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/lessonNameShowScheduleItem"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="aboba"
                android:layout_weight="3"
                style="@style/simpleTextStyleRobotoLight"
                android:textSize="24sp"
                />
            <TextView
                android:id="@+id/lessonTimeShowScheduleItem"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="aboba"
                android:fontFamily="@font/montserrat_light"
                android:textColor="@color/grey"
                android:textSize="18sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/teacherNameShowScheduleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aboba"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/grey"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/studyRoomShowScheduleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aboba"
            android:fontFamily="@font/montserrat_light"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
    </LinearLayout>
</FrameLayout>