<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutCalendarView"
    android:paddingEnd="1dp"
    android:paddingStart="1dp"
    >

    <TextView
        android:id="@+id/dateCalendarView"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        style="@style/simpleTextStyleMontserrat"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_marginTop="3dp"
        android:id="@+id/mainEventCalendarView"
        style="@style/simpleTextStyleMontserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_calendar_view_item_style"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:text="Поездка в москву"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateCalendarView" />

    <TextView
        android:id="@+id/anotherEventsCount"
        style="@style/simpleTextStyleMontserrat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/green_calendar_view_item_style"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:text="+2 события"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainEventCalendarView" />

</androidx.constraintlayout.widget.ConstraintLayout>