<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_round_shape_background"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/lessonNameTextInListItemForSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Русский"
        style="@style/simpleTextStyleRobotoLight"
        />

    <TextView
        android:id="@+id/teacherNameTextInListItemForSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Иванов И.И."
        style="@style/simpleTextStyleRobotoLight"
        android:textColor="@color/grey"
        android:textSize="16sp"
        />
</LinearLayout>