<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/shape_with_bottom_stroke"
    android:id="@+id/mainElemShowListChats"
    android:padding="5dp"
    >

    <ImageView
        android:padding="10dp"
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/ic_profile" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/comradNameShowListChats"
            style="@style/simpleTextStyleMontserrat"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пользователь"
            />

        <TextView
            android:id="@+id/lastMessageShowListChats"
            android:gravity="bottom"
            android:layout_weight="1"
            style="@style/simpleTextStyleRoboto"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Последнее сообщение" />
    </LinearLayout>

    <TextView
        android:id="@+id/lastMessageTimeShowListChats"
        android:layout_marginLeft="5dp"
        android:layout_gravity="bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11:11"
        android:textSize="16sp"
        android:textColor="@color/grey"
        style="@style/simpleTextStyleMontserrat"
        />

</LinearLayout>