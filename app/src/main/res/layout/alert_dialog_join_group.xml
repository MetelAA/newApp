<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/aboba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"

        >

        <TextView
            style="@style/simpleTextStyleMontserrat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Присоединиться к группе" />

        <EditText
            android:id="@+id/editCustomJoinGroupAlertDialogField"
            style="@style/editDefaultStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Введите код группы"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCustomJoinGroupAlertDialogCancel"
                style="@style/AlertDialogButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Отмена"
                android:textColor="@color/btnRed" />

            <Button
                android:id="@+id/btnCustomJoinGroupAlertDialogSubmit"
                style="@style/AlertDialogButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:text="Готово"
                android:textColor="@color/bluePrimary" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>